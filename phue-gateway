# phue bridge gateway service
server {
    listen 80;
    listen [::]:80;
    server_name phue.anuv.me;
    location / {
        proxy_pass http://127.0.0.1:3022;
        #return 301 https://$host$request_uri;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /socket {
        proxy_pass http://127.0.0.1:3023;
        proxy_http_version 1.1;
        proxy_set_header Host $host;		
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
    }
    location ~ /\.ht {
        deny all;
    }
}
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name phue.anuv.me;
    ssl on;
    ssl_certificate /etc/letsencrypt/live/anuv.me-0001/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/anuv.me-0001/privkey.pem;
    location / {
        proxy_pass http://127.0.0.1:3022;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /socket {
        proxy_pass http://127.0.0.1:3023;
        proxy_http_version 1.1;
        proxy_set_header Host $host;		
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
    }
    location ~ /\.ht {
        deny all;
    }
}